<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:text="Paired Devices"
    android:id="@+id/twPD"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_above="@+id/in_semi"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/twPD" />

    <RadioButton
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="CONNECTION STATE"
        android:id="@+id/con_sta"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/semi_out" />

    <Button
        android:background="@drawable/button_alarm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In-Semi"
        android:id="@+id/in_semi"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="79dp" />

    <Button
        android:background="@drawable/button_alarm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semi-Out"
        android:id="@+id/semi_out"
        android:layout_alignTop="@+id/in_semi"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@drawable/button_alarm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Out-Semi"
        android:id="@+id/out_semi"
        android:layout_alignBottom="@+id/semi_out"
        android:layout_alignEnd="@+id/listView" />

    <Button
        android:background="@drawable/button_alarm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Semi-In"
        android:id="@+id/semi_in"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="@drawable/button_alarm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In-Out"
        android:id="@+id/in_out"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/semi_out"
        android:layout_alignStart="@+id/semi_out" />

    <Button
        android:background="@drawable/button_alarm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Out-In"
        android:id="@+id/out_in"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/out_semi"
        android:layout_alignStart="@+id/out_semi" />

    <Button
        android:background="@drawable/button_alarm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/start_btn"
        android:layout_above="@+id/in_semi"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="44dp" />

    <Button
        android:background="@drawable/button_alarm"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/stop_btn"
        android:layout_alignTop="@+id/start_btn"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
